{{> navbar-closed}}

<div class="register-photo" style="background-color: rgb(255,255,255);">
	<h1 class="text-center" style="color: rgb(0,0,0);margin-bottom: 5%;">YOUR CART</h1>
	<hr></hr>
	<div class="container" style="margin-top: 37px;">
		<form method="post" action="/checkout"> 
			{{#each cart}}
				{{> cartrow this}}
			{{/each}}
			<button class="btn btn-primary text-center float-right" type="button" onclick="postChOut()" style="margin-right: 44%;background-color: #a3b76a;width: 139px;padding-left: 0;margin-top: 11px;">
				<a style="color: rgb(255,255,255);margin-right: 0px;margin-left: 11px;">Check Out</a>
			</button>
		</form>
	</div>
	
	<div style="height: 157px;">
		<div class="d-inline-flex" style="margin-top: 33px;width: 1200px;">
			<h1 class="text-center tQty" style="margin-right: 0;margin-left: 0;width: 600px;">Items: {{getQtyTotal cart}}</h1>
			<h1 class="text-center tPrice" style="width: 600px;padding-left: 100px;">Total: Php {{getPriceTotal cart}}</h1>
		</div>
	</div>
	<div>
		<button class="btn btn-primary text-center float-right" type="button" onclick="updateCartQty()" style="margin-right: 44%;background-color: rgb(90,106,123);width: 139px;">
			Save Cart
		</button>
	</div>
</div>
