{{> navbar}}
<div class="register-photo" style="background-color: #c59674;">
	<div class="form-container">
		<form method="post" style="width: 400px;">
			<h2 class="text-center" style="font-family: Abel, sans-serif;"><strong>Create</strong> an account.</h2>
			<div class="form-group"><input class="form-control" type="text" id="fname" name="fname" placeholder="First Name" style="font-family: Abel, sans-serif;margin-top: 15px;" required=""></div>
			<div class="form-group"><input class="form-control" type="text" id="lname" name="lname" placeholder="Last Name" style="font-family: Abel, sans-serif;margin-top: 15px;"></div>
			<div class="form-group"><input class="form-control" type="text" id="username" name="username" placeholder="Username" required="" minlength="8" maxlength="15" style="font-family: Abel, sans-serif;margin-top: 15px;"></div>
			<div class="form-group"><input class="form-control" type="email" id="email" name="email" placeholder="Email" style="font-family: Abel, sans-serif;margin-top: 15px;" inputmode="email" required=""></div>
			<div class="form-group"><input class="form-control" type="password" id="password" name="password" placeholder="Password" style="font-family: Abel, sans-serif;" required="" minlength="8" maxlength="20"></div>
			<div class="form-group"><input class="form-control" type="password" id="confirm" name="password_conf" placeholder="Password (repeat)" style="font-family: Abel, sans-serif;" required="" minlength="8" maxlength="20"></div>
			<div class="form-group"><input class="form-control" type="text" id="address" placeholder="Billing Address" style="font-family: Abel, sans-serif;" name="address"></div>
			<div class="form-group"><input class="form-control" type="tel" id="phone" inputmode="tel" name="phone" placeholder="Contact Number" style="font-family: Abel, sans-serif;"></div>
			<div class="form-group">
				<div class="form-check"><label class="form-check-label" style="font-family: Abel, sans-serif;"><input class="form-check-input" type="checkbox" name="checkbox">I agree to the license terms.</label></div>
			</div>
			<div class="form-group"><button class="btn btn-primary btn-block border rounded" id="regSub" type="submit" style="font-family: Abel, sans-serif;background-color: #a3b76a;">Sign Up</button></div>
			<a class="already" href="/login" style="font-family: Abel, sans-serif;">You already have an account? Login here.</a>
		</form>
		<div class="image-holder"></div>
    </div>
</div>
