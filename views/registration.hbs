{{> navbar-closed}}

<div class="register-photo" style="background-color: #c59674;">
	<div class="form-container">
		<form id="regForm" method="post" style="width: 400px;">
			<h2 class="text-center" style="font-family: Abel, sans-serif;"><strong>Create</strong> an account.</h2>
			<div class="form-group">
				<input class="form-control" type="text" id="fname" name="fname" placeholder="First Name" style="font-family: Abel, sans-serif;margin-top: 15px;">
				<p class="text-danger p-1" id="fnameError"></p>
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" id="lname" name="lname" placeholder="Last Name" style="font-family: Abel, sans-serif;margin-top: 15px;">
				<p class="text-danger p-1" id="lnameError"></p>
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" id="username" name="username" placeholder="Username" style="font-family: Abel, sans-serif;margin-top: 15px;">
				<p class="text-danger p-1" id="usernameError"></p>
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" id="email" name="email" placeholder="Email" style="font-family: Abel, sans-serif;margin-top: 15px;">
				<p class="text-danger p-1" id="emailError"></p>
			</div>
			
			<div class="form-group">
				<input class="form-control" type="password" id="password" name="password" placeholder="Password" style="font-family: Abel, sans-serif;">
				<p class="text-danger p-1" id="passwordError"></p>
			</div>
			
			<div class="form-group">
				<input class="form-control" type="password" id="confirm" name="confirm" placeholder="Password (repeat)" style="font-family: Abel, sans-serif;">
				<p class="text-danger p-1" id="confirmError"></p>
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" id="address" name="address" placeholder="Billing Address" style="font-family: Abel, sans-serif;">
				<p class="text-danger p-1" id="addressError"></p>
			</div>
			
			<div class="form-group">
				<input class="form-control" type="text" id="phone" name="phone" placeholder="Contact Number" style="font-family: Abel, sans-serif;">
				<p class="text-danger p-1" id="phoneError"></p>
			</div>
			
			<div class="form-group"><div class="form-check">
				<label class="form-check-label" style="font-family: Abel, sans-serif;">
					<input class="form-check-input" type="checkbox" id="checkbox" name="checkbox">I agree to the license terms.
				</label>
				<p class="text-danger p-1" id="checkboxError"></p>
			</div></div>
			
			<div class="form-group"><button class="btn btn-primary btn-block border rounded" id="submitReg" type="button" style="font-family: Abel, sans-serif;background-color: #a3b76a;">Sign Up</button></div>
			<a class="already" href="/login" style="font-family: Abel, sans-serif;">You already have an account? Login here.</a>
		</form>
		<div class="image-holder"></div>
    </div>
</div>
